<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   
  
<br>   
  
<%= link_to "New Document", new_document_path %>   
<br>   
<br>   
  
<table border="3">   
   <thead>   
      <tr>   
         <th>File Name</th>   
         <th>Download</th>   
         <th></th>   
      </tr>   
   </thead>   
      
   <tbody>   
      <% @documents.each do |document| %>   
         <tr>   
            <td><%= document.document_name %></td>   
            <td><%= link_to "Download", document.document_url %></td>   
            <td><%= link_to "Delete",  document, method: :delete, confirm: "Are you sure you want to delete #{document.document_name}?" %></td>   
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table>   
</div>  